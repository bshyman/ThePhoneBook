<p id="notice"><%= notice %></p>

<h1>Phones</h1>
<%= link_to 'New Phone', new_phone_path, class: 'btn btn-secondary' %>
<%= link_to 'Export CSV', export_phones_data_phones_path(format: 'csv'), class: 'btn btn-info disabled' %>
<%= link_to 'Export Excel', export_phones_data_phones_path(format: 'xlsx'), class: 'btn btn-info' %>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @phones.each do |phone| %>
      <tr>
        <td><%= link_to 'Show', phone %></td>
        <td><%= link_to 'Edit', edit_phone_path(phone) %></td>
        <td><%= link_to 'Destroy', phone, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Phone', new_phone_path %>
