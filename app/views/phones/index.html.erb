<p id="notice"><%= notice %></p>

<h1>Phones</h1>
<%= link_to 'New Phone', new_phone_path, class: 'btn btn-secondary' %>
<%= link_to 'Export CSV', export_phones_data_phones_path(format: 'csv'), class: 'btn btn-info disabled' %>
<%= link_to 'Export Excel', export_phones_data_phones_path(format: 'xlsx'), class: 'btn btn-info' %>

<table class="table table-white table-striped table-hover">
  <thead>
    <tr>
      <th>Model</th>
      <th>IMEI</th>
      <th>Capacity</th>
      <th>Carrier</th>
    </tr>
  </thead>

  <tbody>
    <% @phones.each do |phone| %>
      <tr>
        <td><%= phone.model %></td>
        <td><%= phone.imei %></td>
        <td><%= phone.capacity %></td>
        <td><%= phone.original_carrier %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

